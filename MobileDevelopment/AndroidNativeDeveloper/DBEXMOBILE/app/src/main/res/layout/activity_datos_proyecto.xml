<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".DatosProyecto">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:orientation="vertical">




            <TextView
                android:id="@+id/textViewIdOperario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID OPERARIO"
                android:textAlignment="center"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="10dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextIdOperario"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:inputType="number"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:layout_marginTop="10dp"
                android:maxLength="5"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewNombreOperario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NOMBRE"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="52dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextNombreOperario"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:textSize="18dp"
                android:layout_marginLeft="35dp"
                android:maxLength="20"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewDieta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DIETA ASIGNADA"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="33dp"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EtextDietas"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="35dp"
                android:inputType="text"
                android:maxLength="10"
                android:textAlignment="center"/>


            <TextView
                android:id="@+id/textViewIdProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="NÚMERO DEL PROYECTO"
                android:textAlignment="center"
                android:textColor="#3F51B5"
                android:layout_marginLeft="5dp"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextIdProyecto"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="35dp"
                android:inputType="number"
                android:maxLength="6"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewProvnciaProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PROVINCIA DEL PROYECTO"
                android:textAlignment="center"
                android:layout_marginTop="5dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EtextProvinciaProyecto"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="35dp"
                android:inputType="text"
                android:maxLength="15"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewMuncipioProyecto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MUNICIPIO DEL PROYECTO"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextMunicipioProyecto"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:maxLength="20"
                android:inputType="text"
                android:textAlignment="center"/>




            <TextView
                android:id="@+id/textViewTipoMaterial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="MATERIAL COMPRADO"
                android:textAlignment="center"
                android:layout_marginLeft="5dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextTipoMaterial"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:maxLength="20"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewAlmacen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ALMACÉN DE LA COMPRA"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="3dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/EtextAlmacenCompra"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:maxLength="20"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewMunicipioAlmacen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MUNICIPIO DEL ALMACÉN"
                android:textAlignment="center"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextMunicipioAlmacen"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:maxLength="15"
                android:inputType="text"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewImporteCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IMPORTE DE LA COMPRA"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextImporteCompra"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:textColor="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="35dp"
                android:textSize="18dp"
                android:maxLength="10"
                android:inputType="numberDecimal"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/textViewFechaCompra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FECHA DE LA COMPRA"
                android:textAlignment="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:textColor="#3F51B5"
                android:textSize="18dp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/EtextFechaCompra"
                android:layout_width="120dp"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:textColor="#000000"
                android:textSize="18dp"
                android:layout_marginLeft="35dp"
                android:maxLength="10"
                android:textAlignment="center"/>

            <Button
                android:id="@+id/botonGuardarDB"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:text="GUARDAR DATOS"
                android:textColor="#009688"
                android:textSize="18dp" />




            <Button
                android:id="@+id/botonSalir"
                android:layout_width="160dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:text="SALIR"
                android:layout_marginLeft="15dp"
                android:textStyle="bold"
                android:textColor="#009688"
                android:onClick="salirProyecto"
                android:textSize="18dp" />




        </LinearLayout>
    </ScrollView>




</androidx.constraintlayout.widget.ConstraintLayout>