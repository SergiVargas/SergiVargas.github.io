<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo"
    tools:context=".Menu">

    <TextView
        android:id="@+id/TestViewMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENÚ"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.065" />

    <Button
        android:id="@+id/botonEntrarConfiguracion"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:onClick="irConfiguracion"
        android:text="CONFIGURACIÓN"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TestViewMenu"
        app:layout_constraintVertical_bias="0.11" />


    <Button
        android:id="@+id/botonEntrarProyecto"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:onClick="irProyecto"
        android:text="GUARDAR DATOS"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEntrarConfiguracion"
        app:layout_constraintVertical_bias="0.11" />

    <Button
        android:id="@+id/botonEntrarActualizar"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:onClick="irActualizar"
        android:text="MANEJAR DATOS"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEntrarProyecto"
        app:layout_constraintVertical_bias="0.152" />

    <Button
        android:id="@+id/botonSalirMenu"
        android:layout_width="170dp"
        android:layout_height="65dp"
        android:onClick="salirMenu"
        android:text="SALIR"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#009688"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/botonEntrarActualizar"
        app:layout_constraintVertical_bias="0.245" />


</androidx.constraintlayout.widget.ConstraintLayout>